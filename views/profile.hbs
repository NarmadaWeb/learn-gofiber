<!-- views/profile.hbs -->
<!DOCTYPE html>
<html>
<head>
    <title>Profil {{user.Name}}</title>
</head>
<body>
    <h1>Profil Pengguna</h1>
    <p>ID: {{user.ID}}</p>
    <p>Nama: {{user.Name}}</p>
    <p>Email: {{user.Email}}</p>

    {{#if isAdmin}}
        <p><strong>Status: Administrator</strong></p>
    {{else}}
        <p>Status: Pengguna Biasa</p>
    {{/if}}

    <hr>
    <p>Generated by Handlebars engine!</p>
</body>
</html>
